# ============================================
# ProcGenie S2P Platform - Environment Variables
# ============================================

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1
APP_NAME=ProcGenie
APP_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3001,http://localhost:4200

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=procgenie
DB_PASSWORD=procgenie_secret
DB_DATABASE=procgenie_dev
DB_SSL=false
DB_SYNCHRONIZE=true
DB_LOGGING=true
DB_MAX_CONNECTIONS=100

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Anthropic AI (Claude)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=4096

# Azure AD (SSO)
AZURE_AD_TENANT_ID=
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_REDIRECT_URI=http://localhost:3000/api/v1/auth/azure/callback

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_STORAGE_CONTAINER=procgenie-documents

# Bull Queue (Redis-backed)
BULL_QUEUE_PREFIX=procgenie
BULL_QUEUE_DEFAULT_ATTEMPTS=3
BULL_QUEUE_DEFAULT_BACKOFF=5000

# Email / SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@procgenie.com

# ERP Integration
SAP_BASE_URL=
SAP_CLIENT_ID=
SAP_CLIENT_SECRET=
ORACLE_BASE_URL=
ORACLE_API_KEY=

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# WebSocket
WS_PORT=3002
WS_NAMESPACE=/notifications

# Feature Flags
FEATURE_AI_ANALYSIS=true
FEATURE_ESG_SCORING=true
FEATURE_PREDICTIVE_ANALYTICS=true
FEATURE_AUTO_APPROVAL=false

# Multi-tenancy
DEFAULT_TENANT_ID=default
